---
// Button.astro
interface Props {
  href?: string;
  variant?: 'primary' | 'secondary' | 'outline' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  class?: string;
  type?: 'button' | 'submit' | 'reset';
  disabled?: boolean;
  external?: boolean;
}

const {
  href,
  variant = 'primary',
  size = 'md',
  class: className = '',
  type = 'button',
  disabled = false,
  external = false,
} = Astro.props;

const base = 'inline-flex items-center justify-center gap-2 font-medium rounded-full transition-all duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-brand-500 focus-visible:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed';

const variants = {
  primary: 'bg-brand-600 text-white hover:bg-brand-500 shadow-lg shadow-brand-900/20 hover:shadow-brand-900/30 hover:-translate-y-0.5',
  secondary: 'bg-earth-500 text-white hover:bg-earth-400 shadow-lg shadow-earth-900/20 hover:-translate-y-0.5',
  outline: 'border-2 border-brand-600 text-brand-700 hover:bg-brand-50 hover:border-brand-700',
  ghost: 'text-brand-700 hover:bg-brand-50',
};

const sizes = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-6 py-3 text-sm',
  lg: 'px-8 py-4 text-base',
};

const classes = [base, variants[variant], sizes[size], className].join(' ');

const Tag = href ? 'a' : 'button';
const attrs = href
  ? { href, ...(external ? { target: '_blank', rel: 'noopener noreferrer' } : {}) }
  : { type, disabled };
---

<Tag class={classes} {...attrs}>
  <slot />
</Tag>
