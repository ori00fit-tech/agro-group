---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Breadcrumbs from '@/components/ui/Breadcrumbs.astro';
import { getCollection } from 'astro:content';

const allJobs = await getCollection('careers', ({ data }) => data.active);
const sorted = allJobs.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---

<BaseLayout
  title="Carrières"
  description="Rejoignez Agro Group — découvrez nos offres d'emploi dans l'agronomie, la logistique, la R&D et plus encore."
  breadcrumbs={[{ name: 'Accueil', url: '/' }, { name: 'Carrières', url: '/careers' }]}
>
  <!-- Hero -->
  <div class="relative bg-earth-900 pt-32 pb-20 overflow-hidden">
    <div class="absolute inset-0">
      <img src="/images/careers-hero.jpg" alt="" class="w-full h-full object-cover opacity-20" />
      <div class="absolute inset-0 bg-gradient-to-r from-earth-900 to-earth-800/80"></div>
    </div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <Breadcrumbs items={[{ label: 'Accueil', href: '/' }, { label: 'Carrières' }]} light={true} />
      <h1 class="font-display text-5xl md:text-7xl font-semibold text-white mt-6 leading-tight max-w-3xl">
        Construisez votre avenir avec nous
      </h1>
      <p class="text-white/60 text-xl mt-4 max-w-2xl leading-relaxed">
        Rejoignez une équipe passionnée de 3 500 collaborateurs qui font avancer l'agriculture de demain.
      </p>
      <div class="mt-8 flex flex-wrap gap-6">
        {[
          { v: sorted.length.toString(), l: 'Postes ouverts' },
          { v: '5', l: 'Départements' },
          { v: '95%', l: 'Emplois locaux' },
        ].map((s) => (
          <div class="bg-white/10 rounded-2xl px-6 py-4 backdrop-blur-sm border border-white/10">
            <p class="font-display text-3xl font-semibold text-white">{s.v}</p>
            <p class="text-white/50 text-sm mt-1">{s.l}</p>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Jobs listing -->
  <section class="section-py bg-neutral-50">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="font-display text-3xl font-semibold text-neutral-900 mb-8 reveal">Offres d'emploi actuelles</h2>
      <div class="space-y-4 stagger">
        {sorted.map((job) => (
          <article class="reveal bg-white rounded-2xl border border-neutral-100 hover:border-brand-200 hover:shadow-lg transition-all duration-300 group">
            <a href={`/careers/${job.slug}`} class="flex flex-col md:flex-row md:items-center gap-4 p-6 md:p-8">
              <div class="flex-1">
                <div class="flex flex-wrap gap-2 mb-2">
                  <span class="text-xs px-2.5 py-1 bg-brand-50 text-brand-700 rounded-full font-medium border border-brand-100">{job.data.type}</span>
                  <span class="text-xs px-2.5 py-1 bg-neutral-100 text-neutral-600 rounded-full font-medium">{job.data.department}</span>
                </div>
                <h3 class="font-display text-xl font-semibold text-neutral-900 group-hover:text-brand-700 transition-colors mb-1">
                  {job.data.title}
                </h3>
                <div class="flex items-center gap-4 text-sm text-neutral-400">
                  <span class="flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    {job.data.location}
                  </span>
                  <span class="flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    {new Intl.DateTimeFormat('fr-FR', { day: 'numeric', month: 'long' }).format(new Date(job.data.date))}
                  </span>
                </div>
              </div>
              <div class="flex items-center gap-2 text-brand-700 font-medium group-hover:gap-3 transition-all flex-shrink-0">
                Voir l'offre
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </div>
            </a>
          </article>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
